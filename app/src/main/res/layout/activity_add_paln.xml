<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.AddPlanActivity">

    <TextView
        android:id="@+id/addPlanHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/myfont"
        android:text="Add meal to plan."
        android:textColor="@color/binqe"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/addPlanHeading"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:src="@drawable/done" />

    <EditText
        android:id="@+id/mealEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/addPlanHeading"
        android:layout_marginTop="16dp"
        android:background="@drawable/orange_border"
        android:fontFamily="@font/myfont"
        android:hint="Enter the meal name"
        android:maxLines="1"
        android:padding="12sp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mealEditText"
        android:layout_marginTop="12dp"
        android:background="@drawable/orange_border"
        android:fontFamily="@font/myfont"
        android:gravity="top"
        android:hint="Enter the date"
        android:padding="12dp"
        android:textSize="18sp"
        android:focusable="false"
        android:clickable="true"/>

</RelativeLayout>
